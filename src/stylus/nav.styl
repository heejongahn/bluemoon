/* Responsiv navbar */
.navbar
  display flex
  align-items center
  flex-wrap wrap
  height: 4em
  padding: 0 2em

/* Navbar head, containing a logo and a toggle*/
.navbar-head
  display flex
  align-items center
  justify-content space-between
  width 100%
  height 4em

@media(min-width: web)
  .navbar-head
    width auto

/* Navbar toggle button, only shown in mobile */
.navbar-toggle
  display inline-block

@media(min-width: web)
  .navbar-toggle
    display none

/* Each links in navbar */
.navbar-logo, .navbar-toggle, .navbar-item > a
  color main-heavy
  text-decoration none
  font-weight bold

  &:hover
    color gray-header

/* Navbar body containing actual navbarigational links */
.navbar-body
  display none
  width 100%
  z-index 1
  background white

@media(min-width: web)
  .navbar-body
    display flex
    width auto

/* The links are represented as a list of items */
.navbar-item-list, .navbar-item
  width 100%

.navbar-item-list
  list-style-type none
  margin 0
  padding 0

.navbar-item
  display inline-block
  margin 4px auto

@media(min-width: web)
  .navbar-item-list
    display flex
    margin-left 1em
    justify-content flex-end

  .navbar-item
    margin 1em
